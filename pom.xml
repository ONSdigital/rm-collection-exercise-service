        </dependency>

        <dependency>
            <groupId>uk.gov.ons.ctp.product</groupId>
            <artifactId>collectioninstrumentsvc-api</artifactId>
            <version>10.49.2</version>
        </dependency>

        <dependency>
            <groupId>uk.gov.ons.ctp.product</groupId>
