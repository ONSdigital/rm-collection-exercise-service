        <!-- Testing -->
        <dependency>
            <groupId>uk.gov.ons.ctp.common</groupId>
            <artifactId>test-framework</artifactId>
            <version>10.49.12</version>
            <scope>test</scope>
        </dependency>

        <dependency>
            <groupId>com.mashape.unirest</groupId>
            <artifactId>unirest-java</artifactId>
